%option namespace=parser
// TODO : Add parsing context as param

%top{
}

id      [_a-zA-Z][a-zA-Z0-9_]*
eol     \r?\n
INT     [0-9]+

%%
{eol}   out() << "$\n";
\s+     out() << text();
return  out() << "return";
void    out() << "void";
int     out() << "int";
{INT}   out() << "int_" << text();
"("     out() << "(";
")"     out() << ")";
"{"     out() << "{";
"}"     out() << "}";
{id}    out() << "id_" << text();
";"     out() << ";";
.       out() << "Unknown symbol : " << text();
%%
